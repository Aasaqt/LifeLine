<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvmedicinedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Medicine Details"
        android:textColor="#FBA146"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnHealthNext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="OR"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnsendmedicineimg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/custombordercontent"
        android:text="Send Image"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnsendmedicineimg"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="17dp"
        android:text="Send us the snapshot of medicine"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btnHealthNext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etmedicinequant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custombordercontent"
        android:text="Order Now"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/etmedicinequant"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvmedicinedetail"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Enter Medicines Name and quantities "
        android:inputType="textMultiLine" >

   
    </EditText>

</RelativeLayout>
</ScrollView><!-- From: file:/home/aasaqt/AndroidstudioProjects/LifeLine/app/src/main/res/layout/activity_health.xml -->