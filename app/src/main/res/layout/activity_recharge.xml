<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvRechargeDateail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Recharge Detail"
        android:textColor="#FBA146"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/spinner_operatorname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvRechargeDateail"
        android:layout_marginTop="16dp" 
        android:layout_marginLeft="10dp"
        android:hint="Operator Name"
    
        />
     <!--  <Spinner
        android:id="@+id/spinner_rechargetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinner_operatorname"
        /> -->

    <EditText
        android:id="@+id/et_contactNumber"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/spinner_operatorname"
        android:ems="10"
        android:hint="10 digit Number"
    
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_contactNumber"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spinner_operatorname"
        android:ems="10"
        android:layout_margin="10dp"
        android:hint="Amount"
        android:inputType="number" >

    
    </EditText>

    <EditText
        android:id="@+id/spinner_rechargetype"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:hint="Recharge Type"
        android:layout_below="@+id/spinner_operatorname" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvRechargeDateail"
        android:layout_below="@+id/spinner_rechargetype"
        android:text="Personal Details"
        android:layout_marginTop="15dp"
        android:textColor="#FBA146"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/et_recharge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/et_email"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:hint="Name"
        android:ems="10" />

    <EditText
        android:id="@+id/et_phonedetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_recharge_name"
        android:layout_alignLeft="@+id/et_amount"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/spinner_rechargetype"
        android:layout_below="@+id/et_recharge_name"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_email"
        android:layout_alignLeft="@+id/et_phonedetails"
        android:layout_alignRight="@+id/et_amount"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/btnrechargesend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/custombordercontent"
        android:textColor="#ffffff"
        android:text="Send" />

</RelativeLayout>
</ScrollView>